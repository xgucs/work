<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"  
	android:background="@drawable/main_bg"
	    >
	
	<GridView
		android:id="@+id/grid_add_apps"
		android:listSelector="@drawable/frame"
	    android:drawSelectorOnTop="false"
		android:layout_centerInParent="true"
	    android:verticalSpacing="15dip"
	    android:horizontalSpacing="5dip"
	    android:numColumns="7"
	    android:fadingEdgeLength="48dip"
	    android:cacheColorHint="#00000000"
	    android:layout_width="1000dp"
	    android:layout_height="420dp"
	   	android:paddingTop="20dp"
	    android:paddingBottom="20dp"
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp"
	/>
	
	<ImageView
		android:id="@+id/img_screenshot"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>

	<ImageView
		android:id="@+id/img_screenshot_keep"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>

	<ImageView
		android:id="@+id/img_arrow"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<ImageView
		android:id="@+id/img_dim"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:src="@drawable/img_dim"
		android:visibility="invisible"
	/>    
</RelativeLayout>
