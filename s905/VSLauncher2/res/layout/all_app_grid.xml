<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="false"
    android:background="@drawable/app_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="false"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/apptitle"
            android:layout_marginTop="70dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:singleLine="true"
            android:text="@string/all_app_title"
            android:textSize="40sp" 
            android:textColor="#ff000000"
            android:gravity="center_horizontal"/>
            
        <ImageView
                android:id="@+id/ImageView_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/user_app_line" />
            
        <GridView
            android:id="@+id/apps_gview"
            android:layout_width="fill_parent"
            android:layout_height="510dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:columnWidth="120dp"
            android:horizontalSpacing="10dp"
            android:descendantFocusability="afterDescendants"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="40dp" 
            android:gravity="center"
            android:listSelector="@drawable/item_grid_item_selector"
            android:smoothScrollbar="false"
            android:scrollbars="none">
        </GridView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:focusable="false"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ImageView_menu"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="100dip"
                android:layout_marginTop="10dip"
                android:src="@drawable/app_menu_icon" />

            <TextView
                android:id="@+id/menu_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:focusable="false"
                android:layout_marginTop="10dip"
                android:singleLine="true"
                android:textColor="#ff000000"
                android:text="@string/app_app_menu_hint"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>